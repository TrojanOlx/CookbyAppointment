.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  display: flex;
  box-shadow: 0 -1px 2px rgba(0, 0, 0, 0.1);
  padding-bottom: env(safe-area-inset-bottom);
}

.tab-bar-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 48px;
  padding:12rpx 0rpx;
}

.tab-bar-icon {
  font-size: 24px;
  margin-bottom: 2px;
  display: flex;
  justify-content: center;
  color: #999999;
}

.tab-bar-text {
  font-size: 12px;
  color: #999999;
}

.icon-active, .text-active {
  color: #4CAF50;
} 