/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 

/* 通用样式 */
page {
  --primary-color: #4CAF50;
  --danger-color: #F44336;
  --warning-color: #FF9800;
  --text-color: #333333;
  --text-color-light: #666666;
  --background-color: #f6f6f6;
  
  background-color: var(--background-color);
  color: var(--text-color);
  font-size: 14px;
  line-height: 1.5;
  box-sizing: border-box;
}

/* 自定义底部TabBar */
.tab-bar-icon {
  font-size: 22px;
  margin-bottom: 4px;
  position: relative;
}

.tab-bar-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100%;
}

/* 提供字体图标颜色 */
.icon-active {
  color: #4CAF50;
}

/* 清除按钮默认样式 */
button {
  background: none;
  padding: 0;
  margin: 0;
  line-height: normal;
  border-radius: 0;
  border: none;
}

button::after {
  border: none;
}

/* 溢出文字省略号 */
.ellipsis {
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

/* 多行文本溢出省略 */
.multi-ellipsis {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
} 
