/**index.wxss**/
.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  background-color: #f6f6f6;
  position: relative;
  overflow: hidden;
}

/* 固定的导航部分 */
.fixed-header {
  width: 100%;
  background-color: #f6f6f6;
  padding: 0 30rpx;
  box-sizing: border-box;
  z-index: 10;
  position: relative;
}

/* 可滚动内容部分 */
.features-scroll {
  flex: 1;
  width: 100%;
  box-sizing: border-box;
  padding: 0 30rpx;
  overflow-x: hidden;
}

.header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 50rpx;
  margin-bottom: 50rpx;
}

.logo {
  width: 180rpx;
  height: 180rpx;
  margin-bottom: 30rpx;
}

.app-name {
  font-size: 48rpx;
  font-weight: bold;
  color: #4CAF50;
  margin-bottom: 10rpx;
}

.app-desc {
  font-size: 30rpx;
  color: #999;
}

.features {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-bottom: 20rpx;
}

.feature-item {
  width: 90%;
  background-color: #fff;
  border-radius: 16rpx;
  padding: 25rpx;
  margin-bottom: 25rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  transition: transform 0.3s;
}

.feature-item:active {
  transform: scale(0.98);
}

.feature-icon {
  font-size: 60rpx;
  margin-bottom: 20rpx;
}

.menu-icon {
  color: #FF9800;
}

.calendar-icon {
  color: #2196F3;
}

.fridge-icon {
  color: #9C27B0;
}

.feature-name {
  font-size: 36rpx;
  font-weight: 500;
  margin-bottom: 10rpx;
  color: #333;
}

.feature-desc {
  font-size: 28rpx;
  color: #666;
}

.footer {
  width: 100%;
  padding: 20rpx 0;
  display: flex;
  justify-content: center;
  margin-bottom: calc(50rpx + env(safe-area-inset-bottom));
  padding-bottom: calc(48px + env(safe-area-inset-bottom)); /* 基础TabBar高度 + 安全区域 */
}

.version {
  font-size: 24rpx;
  color: #999;
}
