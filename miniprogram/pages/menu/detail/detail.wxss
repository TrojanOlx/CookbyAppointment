.container {
  background-color: #f6f6f6;
  min-height: 100vh;
  box-sizing: border-box;
  padding: 0;
}

/* 轮播图样式 */
.dish-swiper {
  width: 100%;
  height: 500rpx;
  margin: 0;
  background-color: #000;
}

.swiper-item {
  display: flex;
  justify-content: center;
  align-items: center;
  transition: all 0.3s ease;
  transform: scale(1);
}

.swiper-image {
  width: 100%;
  height: 100%;
  transition: all 0.3s ease-in-out;
  will-change: transform;
  transform: scale(1.01);
}

/* 基本信息 */
.info-section {
  width: 100%;
  padding: 30rpx;
  background-color: #fff;
  margin-bottom: 20rpx;
  box-sizing: border-box;
}

.dish-name {
  width: 100%;
  font-size: 38rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.dish-tags {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
}

.dish-tag {
  font-size: 24rpx;
  padding: 6rpx 20rpx;
  border-radius: 20rpx;
  margin-right: 20rpx;
  margin-bottom: 10rpx;
}

.dish-tag.type {
  background-color: #e8f5e9;
  color: #4CAF50;
}

.dish-tag.spicy {
  background-color: #ffebee;
  color: #f44336;
}

/* 详情内容 */
.detail-section {
  width: 100%;
  padding: 30rpx;
  background-color: #fff;
  margin-bottom: 20rpx;
  box-sizing: border-box;
}

.section-title {
  width: 100%;
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 20rpx;
  border-left: 8rpx solid #4CAF50;
  padding-left: 20rpx;
  box-sizing: border-box;
}

.section-content {
  width: 100%;
  font-size: 28rpx;
  line-height: 1.6;
  color: #666;
  box-sizing: border-box;
}

.reference {
  color: #2196F3;
  text-decoration: underline;
}

/* 食材列表 */
.ingredients-container {
  width: 100%;
  margin-top: 10rpx;
  box-sizing: border-box;
}

.ingredient-row {
  width: 100%;
  display: flex;
  justify-content: space-between;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
  box-sizing: border-box;
}

.ingredient-name {
  font-size: 28rpx;
  color: #333;
  flex: 1;
}

.ingredient-amount {
  font-size: 28rpx;
  color: #666;
  margin-left: 20rpx;
}

/* 制作步骤 */
.steps-list {
  width: 100%;
  margin-top: 10rpx;
  box-sizing: border-box;
}

.step-item {
  width: 100%;
  display: flex;
  margin-bottom: 30rpx;
  box-sizing: border-box;
}

.step-number {
  width: 50rpx;
  height: 50rpx;
  background-color: #4CAF50;
  color: #fff;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.step-content {
  flex: 1;
  font-size: 28rpx;
  line-height: 1.6;
  color: #333;
  padding-top: 8rpx;
}

/* 底部固定区域 */
.bottom-fixed-area {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 100;
  background-color: transparent;
  width: 100%;
  display: flex;
  flex-direction: column;
  transform: translateZ(0);
}

/* 底部安全区域 */
.bottom-safe-area {
  width: 100%;
  height: 120rpx; /* 预留操作按钮的高度 */
}

.safe-area-bottom {
  width: 100%;
  height: constant(safe-area-inset-bottom);
  height: env(safe-area-inset-bottom);
  background-color: #fff;
}

/* 按钮区域 */
.action-buttons {
  width: 100%;
  display: flex;
  padding: 30rpx;
  justify-content: space-between;
  box-sizing: border-box;
  background-color: #fff;
  box-shadow: 0 -1rpx 10rpx rgba(0, 0, 0, 0.05);
}

.action-btn {
  width: 45%;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 44rpx;
  font-size: 30rpx;
}

.action-btn.edit {
  background-color: #4CAF50;
  color: #fff;
}

.action-btn.delete {
  background-color: #f5f5f5;
  color: #ff5252;
  border: 1rpx solid #ff5252;
} 