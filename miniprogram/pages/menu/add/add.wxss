.container {
  padding: 20rpx;
  background-color: #f6f6f6;
  min-height: 100vh;
  box-sizing: border-box;
}

/* 表单区块样式 */
.form-section {
  background-color: #fff;
  border-radius: 10rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 500;
  margin-bottom: 30rpx;
  color: #333;
}

/* 表单项样式 */
.form-item {
  margin-bottom: 30rpx;
}

.form-label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.form-input {
  height: 80rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  width: 100%;
  box-sizing: border-box;
}

.form-textarea {
  height: 180rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  padding: 20rpx;
  font-size: 28rpx;
  width: 100%;
  box-sizing: border-box;
}

/* Picker 样式 */
.picker {
  height: 80rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  width: 100%;
  box-sizing: border-box;
  display: flex;
  align-items: center;
}

.picker.placeholder {
  color: #999;
}

/* 图片上传区域 */
.image-upload-area {
  margin-top: 20rpx;
}

.image-list {
  display: flex;
  flex-wrap: wrap;
}

.image-item {
  width: 200rpx;
  height: 200rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  position: relative;
  border-radius: 8rpx;
  overflow: hidden;
}

.image-item image {
  width: 100%;
  height: 100%;
}

.delete-btn {
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  width: 40rpx;
  height: 40rpx;
  background-color: rgba(0, 0, 0, 0.5);
  color: #fff;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 32rpx;
}

.upload-btn {
  width: 200rpx;
  height: 200rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border: 1rpx dashed #ccc;
  border-radius: 8rpx;
  color: #999;
  font-size: 24rpx;
}

.plus {
  font-size: 60rpx;
  margin-bottom: 10rpx;
  line-height: 1;
}

/* 食材列表 */
.ingredients-list {
  margin-top: 20rpx;
}

.ingredient-item {
  display: flex;
  margin-bottom: 20rpx;
  align-items: center;
}

.ingredient-name {
  flex: 2;
  height: 80rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  margin-right: 20rpx;
}

.ingredient-amount {
  flex: 1;
  height: 80rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
}

.delete-ingredient {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #ff5252;
  font-size: 40rpx;
}

.add-ingredient {
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #4CAF50;
  font-size: 28rpx;
  border: 1rpx dashed #4CAF50;
  border-radius: 8rpx;
}

/* 步骤列表 */
.steps-list {
  margin-top: 20rpx;
}

.step-item {
  display: flex;
  margin-bottom: 30rpx;
  align-items: flex-start;
}

.step-number {
  width: 50rpx;
  height: 50rpx;
  background-color: #4CAF50;
  color: #fff;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
  margin-right: 20rpx;
  margin-top: 10rpx;
}

.step-content {
  flex: 1;
  height: 150rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  padding: 20rpx;
  font-size: 28rpx;
}

.delete-step {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #ff5252;
  font-size: 40rpx;
  margin-left: 10rpx;
  margin-top: 10rpx;
}

.add-step {
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #4CAF50;
  font-size: 28rpx;
  border: 1rpx dashed #4CAF50;
  border-radius: 8rpx;
}

/* 底部固定区域 */
.bottom-fixed-area {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 100;
  background-color: transparent;
  width: 100%;
  display: flex;
  flex-direction: column;
  transform: translateZ(0);
}

/* 底部安全区域 */
.bottom-safe-area {
  width: 100%;
  height: 120rpx; /* 预留操作按钮的高度 */
}

.safe-area-bottom {
  width: 100%;
  height: constant(safe-area-inset-bottom);
  height: env(safe-area-inset-bottom);
  background-color: #fff;
}

/* 表单按钮 */
.form-actions {
  display: flex;
  justify-content: space-between;
  padding: 15rpx 20rpx;
  background-color: #fff;
  box-shadow: 0 -1rpx 10rpx rgba(0, 0, 0, 0.05);
}

.cancel-btn {
  width: 45%;
  height: 88rpx;
  background-color: #f5f5f5;
  color: #666;
  font-size: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 44rpx;
}

.submit-btn {
  width: 45%;
  height: 88rpx;
  background-color: #4CAF50;
  color: #fff;
  font-size: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 44rpx;
} 