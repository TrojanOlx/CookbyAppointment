<view class="container" style="padding-bottom: {{safeAreaBottom ? (safeAreaBottom + 'px') : '0rpx'}};">
  <!-- 顶部类型选择器 -->
  <view class="type-selector">
    <view 
      class="type-item {{selectedType === '' ? 'active' : ''}}" 
      bindtap="selectType" 
      data-type=""
    >
      <text>全部</text>
    </view>
    <view 
      class="type-item {{selectedType === '炒菜' ? 'active' : ''}}" 
      bindtap="selectType" 
      data-type="炒菜"
    >
      <text>炒菜</text>
    </view>
    <view 
      class="type-item {{selectedType === '青菜' ? 'active' : ''}}" 
      bindtap="selectType" 
      data-type="青菜"
    >
      <text>青菜</text>
    </view>
    <view 
      class="type-item {{selectedType === '炖汤' ? 'active' : ''}}" 
      bindtap="selectType" 
      data-type="炖汤"
    >
      <text>炖汤</text>
    </view>
  </view>

  <!-- 菜品列表 -->
  <view class="dish-list">
    <block wx:if="{{dishes.length > 0}}">
      <view 
        class="dish-item" 
        wx:for="{{dishes}}" 
        wx:key="id" 
        bindtap="goToDetail" 
        data-id="{{item.id}}"
      >
        <image 
          class="dish-image" 
          src="{{item.images[0] || '/images/default-dish.png'}}" 
          mode="aspectFill"
        ></image>
        <view class="dish-info">
          <view class="dish-name">{{item.name}}</view>
          <view class="dish-tags">
            <view class="dish-tag type">{{item.type}}</view>
            <view class="dish-tag spicy" wx:if="{{item.spicy !== '不辣'}}">{{item.spicy}}</view>
          </view>
        </view>
      </view>
    </block>
    <view class="empty-tip" wx:else>
      <view class="empty-text">暂无菜品，请添加</view>
    </view>
  </view>

  <!-- 添加按钮 -->
  <view class="add-btn" bindtap="goToAdd" style="bottom: calc(120rpx + {{safeAreaBottom ? (safeAreaBottom + 'px') : '0'}});">+</view>
</view> 