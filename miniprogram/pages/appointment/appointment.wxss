/* 页面容器 */
.container {
  position: relative;
  min-height: 100vh;
  width: 100%;
  background-color: #f8f9fa;
  padding: 0;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  padding-bottom: calc(48px + env(safe-area-inset-bottom)); /* 基础TabBar高度 + 安全区域 */
  overflow-x: hidden; /* 防止水平滚动 */
}

/* 日历部分 */
.calendar-section {
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
  background-color: #fff;
  overflow-x: hidden; /* 防止水平滚动 */
}

/* 预约列表部分 */
.appointments-section {
  flex: 1;
  width: 100%;
  box-sizing: border-box;
  padding: 0 20rpx;
  padding-bottom: 20rpx;
  overflow-x: hidden; /* 防止水平滚动 */
}

/* 预约列表头部 */
.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 0;
  position: sticky;
  top: 0;
  background-color: #f8f9fa;
  z-index: 1;
}

.section-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
}

.add-btn-mini {
  display: flex;
  align-items: center;
  background-color: #4CAF50;
  padding: 12rpx 24rpx;
  border-radius: 30rpx;
}

.add-icon {
  color: #fff;
  font-size: 32rpx;
  margin-right: 8rpx;
}

.add-text {
  color: #fff;
  font-size: 28rpx;
}

/* 预约列表 */
.appointments-list {
  width: 100%;
  overflow-x: hidden; /* 防止水平滚动 */
}

/* 餐次卡片 */
.meal-card {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  overflow: hidden; /* 防止内容溢出 */
}

.meal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.meal-info {
  display: flex;
  align-items: center;
}

.meal-type {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-right: 16rpx;
}

.dish-count {
  font-size: 24rpx;
  color: #666;
  background-color: #f5f5f5;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
}

.meal-actions {
  display: flex;
  gap: 16rpx;
}

.action-btn {
  padding: 8rpx 20rpx;
  border-radius: 24rpx;
  font-size: 26rpx;
}

.action-btn.edit {
  background-color: #e8f5e9;
  color: #4CAF50;
}

.action-btn.delete {
  background-color: #ffebee;
  color: #f44336;
}

/* 菜品列表 */
.dishes-list {
  display: flex;
  white-space: nowrap;
  width: 100%;
  box-sizing: border-box;
  overflow-x: auto; /* 允许内部横向滚动 */
  overflow-y: hidden;
}

.dish-item {
  display: inline-flex;
  flex-direction: column;
  align-items: center;
  margin-right: 24rpx;
  width: 160rpx;
  flex-shrink: 0; /* 防止菜品被压缩 */
}

.dish-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 12rpx;
  background-color: #f5f5f5;
  margin-bottom: 12rpx;
}

.dish-name {
  font-size: 26rpx;
  color: #333;
  width: 100%;
  text-align: center;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 0;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 30rpx;
}

.empty-btn {
  background-color: #4CAF50;
  color: #fff;
  font-size: 28rpx;
  padding: 16rpx 40rpx;
  border-radius: 30rpx;
}

/* 加载状态 */
.loading-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 0;
}

.loading-spinner {
  width: 80rpx;
  height: 80rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #4CAF50;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #666;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 日历组件样式 - 使用更明确的选择器 */
.calendar-section calendar {
  --wc-primary-color: #4CAF50;
  --wc-primary-color-opacity: rgba(76, 175, 80, 0.1);
  --wc-text-color: #333333;
  --wc-text-color-second: #666666;
  --wc-text-color-disabled: #dddddd;
  --wc-bg-color: #ffffff;
  --wc-bg-color-hover: #f5f5f5;
  --wc-border-color: #f0f0f0;
  --wc-holiday-color: #F56C6C;
  --wc-lunar-color: #999;
  --wc-lunar-size: 20rpx;
  
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}
