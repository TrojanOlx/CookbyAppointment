.container {
  padding: 20rpx;
  padding-bottom: calc(120rpx + env(safe-area-inset-bottom));
  background-color: #f6f6f6;
  min-height: 100vh;
  box-sizing: border-box;
}

/* 今日预约 */
.today-appointments {
  background-color: #fff;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  margin-top: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 500;
  margin-bottom: 20rpx;
  padding-bottom: 15rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

/* 餐次卡片 */
.meal-card {
  background-color: #f9f9f9;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.meal-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 15rpx;
}

.meal-type {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
}

.meal-actions {
  display: flex;
}

.action-btn {
  font-size: 24rpx;
  padding: 5rpx 15rpx;
  border-radius: 20rpx;
  margin-left: 10rpx;
}

.action-btn.edit {
  color: #2196F3;
  background-color: #e3f2fd;
}

.action-btn.delete {
  color: #f44336;
  background-color: #ffebee;
}

/* 菜品列表 */
.dishes-list {
  display: flex;
  overflow-x: auto;
  padding-bottom: 10rpx;
}

.dish-item {
  margin-right: 20rpx;
  text-align: center;
  width: 160rpx;
}

.dish-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 8rpx;
  margin-bottom: 10rpx;
  background-color: #f0f0f0;
}

.dish-name {
  font-size: 24rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* 空提示 */
.empty-tip {
  display: flex;
  justify-content: center;
  padding: 40rpx 0;
}

.empty-text {
  color: #999;
  font-size: 28rpx;
}

/* 添加预约按钮 */
.add-btn {
  position: fixed;
  right: 30rpx;
  bottom: calc(120rpx + env(safe-area-inset-bottom));
  width: 100rpx;
  height: 100rpx;
  background-color: #4CAF50;
  color: #fff;
  font-size: 60rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.15);
  z-index: 100;
}

/* 自定义日历样式 */
calendar {
  /* 基础颜色 */
  --wc-primary-color: #4CAF50;
  --wc-primary-color-opacity: rgba(76, 175, 80, 0.1);
  --wc-text-color: #333333;
  --wc-text-color-second: #666666;
  --wc-text-color-disabled: #dddddd;
  --wc-bg-color: #ffffff;
  --wc-bg-color-hover: #f5f5f5;
  --wc-border-color: #f0f0f0;
  --wc-holiday-color: #F56C6C;
  --wc-btn-reset-color: #F56C6C;
  --wc-switch-btn-disabled-color: #cccccc;
  
  /* 农历样式 */
  --wc-lunar-color: #F56C6C;  /* 农历文字颜色 */
  --wc-lunar-size: 20rpx;     /* 农历文字大小 */
  --wc-lunar-weight: normal;  /* 农历文字粗细 */
  
  /* 节日样式 */
  --wc-festival-color: #F56C6C;  /* 节日颜色 */
  --wc-festival-size: 20rpx;     /* 节日文字大小 */
  --wc-festival-weight: normal;  /* 节日文字粗细 */
  
  /* 布局样式 */
  --wc-date-height: 90rpx;       /* 日期单元格高度 */
  --wc-date-lunar-space: 4rpx;   /* 公历和农历之间的间距 */
  
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  padding: 20rpx 0;
  margin-bottom: 20rpx;
  overflow: hidden;
}
