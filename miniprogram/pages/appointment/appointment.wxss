/* 页面容器 */
.container {
  position: relative;
  height: 100vh;
  background-color: #f8f9fa;
  padding: 0;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  padding-bottom: constant(safe-area-inset-bottom); /* iOS 11.0 */
  padding-bottom: env(safe-area-inset-bottom); /* iOS 11.2+ */
}

/* 日历部分 */
.calendar-section {
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
  background-color: #fff;
}

/* 预约列表部分 */
.appointments-section {
  flex: 1;
  width: 100%;
  box-sizing: border-box;
  padding: 0 20rpx;
  padding-bottom: calc(20rpx + constant(safe-area-inset-bottom)); /* iOS 11.0 */
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom)); /* iOS 11.2+ */
  overflow-y: auto;
  -webkit-overflow-scrolling: touch; /* 增加 iOS 滚动流畅度 */
}

/* 预约列表头部 */
.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 0;
  position: sticky;
  top: 0;
  background-color: #f8f9fa;
  z-index: 1;
}

.section-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
}

.add-btn-mini {
  display: flex;
  align-items: center;
  background-color: #4CAF50;
  padding: 12rpx 24rpx;
  border-radius: 30rpx;
}

.add-icon {
  color: #fff;
  font-size: 32rpx;
  margin-right: 8rpx;
}

.add-text {
  color: #fff;
  font-size: 28rpx;
}

/* 预约列表 */
.appointments-list {
  width: 100%;
}

/* 餐次卡片 */
.meal-card {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.meal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.meal-info {
  display: flex;
  align-items: center;
}

.meal-type {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-right: 16rpx;
}

.dish-count {
  font-size: 24rpx;
  color: #666;
  background-color: #f5f5f5;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
}

.meal-actions {
  display: flex;
  gap: 16rpx;
}

.action-btn {
  padding: 8rpx 20rpx;
  border-radius: 24rpx;
  font-size: 26rpx;
}

.action-btn.edit {
  background-color: #e8f5e9;
  color: #4CAF50;
}

.action-btn.delete {
  background-color: #ffebee;
  color: #f44336;
}

/* 菜品列表 */
.dishes-list {
  display: flex;
  white-space: nowrap;
  margin: 0 -24rpx;
  padding: 0 24rpx;
}

.dish-item {
  display: inline-flex;
  flex-direction: column;
  align-items: center;
  margin-right: 24rpx;
  width: 160rpx;
}

.dish-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 12rpx;
  background-color: #f5f5f5;
  margin-bottom: 12rpx;
}

.dish-name {
  font-size: 26rpx;
  color: #333;
  width: 100%;
  text-align: center;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 0;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 30rpx;
}

.empty-btn {
  background-color: #4CAF50;
  color: #fff;
  font-size: 28rpx;
  padding: 16rpx 40rpx;
  border-radius: 30rpx;
}

/* 日历组件样式 */
calendar {
  --wc-primary-color: #4CAF50;
  --wc-primary-color-opacity: rgba(76, 175, 80, 0.1);
  --wc-text-color: #333333;
  --wc-text-color-second: #666666;
  --wc-text-color-disabled: #dddddd;
  --wc-bg-color: #ffffff;
  --wc-bg-color-hover: #f5f5f5;
  --wc-border-color: #f0f0f0;
  --wc-holiday-color: #F56C6C;
  --wc-lunar-color: #999;
  --wc-lunar-size: 20rpx;
  
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}
