.page-container {
  position: relative;
  width: 100%;
  height: 100vh;
  background-color: #f6f6f6;
  overflow: hidden;
}

/* 固定顶部区域 */
.fixed-top {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 100;
  background-color: #f6f6f6;
}

/* 头部 */
.header {
  width: 100%;
  background-color: #fff;
  padding: 20rpx;
  border-radius: 0 0 10rpx 10rpx;
  margin-bottom: 10rpx;
  box-sizing: border-box;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  text-align: center;
}

/* 餐次选择区域 */
.meal-section {
  width: 100%;
  background-color: #fff;
  padding: 20rpx;
  border-radius: 10rpx;
  margin-bottom: 10rpx;
  box-sizing: border-box;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 15rpx;
}

.meal-types {
  display: flex;
  justify-content: space-between;
  width: 100%;
}

.meal-type-item {
  flex: 1;
  height: 70rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #f5f5f5;
  margin: 0 10rpx;
  border-radius: 10rpx;
  color: #666;
  transition: all 0.3s;
}

.meal-type-item.active {
  background-color: #4CAF50;
  color: #fff;
}

/* 筛选区域 */
.filter-section {
  width: 100%;
  background-color: #fff;
  padding: 20rpx;
  border-radius: 10rpx;
  margin-bottom: 10rpx;
  box-sizing: border-box;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.search-box {
  position: relative;
  margin-bottom: 15rpx;
  width: 100%;
}

.search-input {
  height: 70rpx;
  width: 100%;
  background-color: #f5f5f5;
  border-radius: 40rpx;
  padding: 0 80rpx 0 30rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.search-icon {
  position: absolute;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%);
  color: #999;
}

.filter-tags {
  display: flex;
  flex-wrap: wrap;
  width: 100%;
}

.filter-tag {
  padding: 8rpx 16rpx;
  background-color: #f5f5f5;
  border-radius: 30rpx;
  margin-right: 15rpx;
  margin-bottom: 10rpx;
  font-size: 24rpx;
  color: #666;
}

.filter-tag.active {
  background-color: #4CAF50;
  color: #fff;
}

/* 筛选操作按钮 */
.filter-actions {
  display: flex;
  justify-content: flex-end;
  margin-top: 10rpx;
  width: 100%;
}

.clear-filter {
  font-size: 24rpx;
  color: #4CAF50;
  padding: 6rpx 16rpx;
  border: 1rpx solid #4CAF50;
  border-radius: 30rpx;
}

/* 底部固定区域 */
.bottom-fixed-area {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 100;
  background-color: transparent;
  width: 100%;
  display: flex;
  flex-direction: column;
  transform: translateZ(0);
}

/* 已选菜品计数 */
.selected-count-section {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: rgba(76, 175, 80, 0.1);
  padding: 12rpx 20rpx;
  margin: 0;
  box-shadow: 0 -1rpx 10rpx rgba(0, 0, 0, 0.05);
  box-sizing: border-box;
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
}

.selected-count {
  font-size: 26rpx;
  color: #4CAF50;
}

.count-num {
  font-weight: bold;
  font-size: 30rpx;
}

.clear-selection {
  font-size: 24rpx;
  color: #f44336;
  padding: 4rpx 14rpx;
  border: 1rpx solid #f44336;
  border-radius: 30rpx;
  background-color: #fff;
}

/* 底部操作按钮 */
.action-buttons {
  display: flex;
  flex-direction: column;
  background-color: #fff;
  box-shadow: 0 -1rpx 10rpx rgba(0, 0, 0, 0.05);
  width: 100%;
  box-sizing: border-box;
}

.button-wrapper {
  display: flex;
  padding: 15rpx;
  width: 100%;
  box-sizing: border-box;
}

.safe-area-bottom {
  width: 100%;
  height: constant(safe-area-inset-bottom);
  height: env(safe-area-inset-bottom);
  background-color: #fff;
}

.cancel-btn, .submit-btn {
  flex: 1;
  height: 80rpx;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 40rpx;
}

.cancel-btn {
  margin-right: 10rpx;
  background-color: #f5f5f5;
  color: #666;
}

.submit-btn {
  margin-left: 10rpx;
  background-color: #4CAF50;
  color: #fff;
}

.submit-btn[disabled] {
  background-color: #a5d6a7;
  color: #fff;
  opacity: 0.7;
}

/* 滚动内容区域 */
.scroll-content {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100vh;
  box-sizing: border-box;
  -webkit-overflow-scrolling: touch;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx 0;
  width: 100%;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #4CAF50;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 15rpx;
}

.loading-spinner.small {
  width: 40rpx;
  height: 40rpx;
  border-width: 4rpx;
  margin-bottom: 0;
  margin-right: 15rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}

/* 菜品列表 */
.dish-list {
  padding: 10rpx;
  width: 100%;
  box-sizing: border-box;
}

.dish-item {
  display: flex;
  background-color: #fff;
  margin-bottom: 10rpx;
  padding: 15rpx;
  border-radius: 10rpx;
  position: relative;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s;
  width: 100%;
  box-sizing: border-box;
}

.dish-item.selected {
  background-color: #e8f5e9;
  border: 1rpx solid #4CAF50;
}

.dish-image {
  width: 150rpx;
  height: 150rpx;
  border-radius: 8rpx;
  margin-right: 15rpx;
  background-color: #f0f0f0;
  flex-shrink: 0;
}

.dish-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  min-width: 0;
}

.dish-name {
  font-size: 30rpx;
  font-weight: 500;
  margin-bottom: 8rpx;
  width: 100%;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.dish-tags {
  display: flex;
  flex-wrap: wrap;
}

.dish-tag {
  font-size: 22rpx;
  padding: 4rpx 12rpx;
  border-radius: 16rpx;
  margin-right: 8rpx;
  margin-bottom: 8rpx;
}

.dish-tag.type {
  background-color: #e8f5e9;
  color: #4CAF50;
}

.dish-tag.spicy {
  background-color: #ffebee;
  color: #f44336;
}

.check-icon {
  position: absolute;
  right: 15rpx;
  top: 15rpx;
  width: 40rpx;
  height: 40rpx;
  background-color: #4CAF50;
  color: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
}

/* 空状态 */
.empty-tip {
  padding: 40rpx 0;
  text-align: center;
  width: 100%;
}

.empty-text {
  color: #999;
  font-size: 28rpx;
}

/* 加载更多和无更多数据提示 */
.load-more-tip, .no-more-tip {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx 0;
  width: 100%;
  text-align: center;
  color: #999;
  font-size: 24rpx;
} 