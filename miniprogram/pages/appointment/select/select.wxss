.container {
  padding: 20rpx;
  background-color: #f6f6f6;
  min-height: 100vh;
}

/* 头部 */
.header {
  background-color: #fff;
  padding: 30rpx;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  text-align: center;
}

/* 餐次选择区域 */
.meal-section {
  background-color: #fff;
  padding: 30rpx;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.meal-types {
  display: flex;
  justify-content: space-between;
}

.meal-type-item {
  flex: 1;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #f5f5f5;
  margin: 0 10rpx;
  border-radius: 10rpx;
  color: #666;
  transition: all 0.3s;
}

.meal-type-item.active {
  background-color: #4CAF50;
  color: #fff;
}

/* 筛选区域 */
.filter-section {
  background-color: #fff;
  padding: 30rpx;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.search-box {
  position: relative;
  margin-bottom: 20rpx;
}

.search-input {
  height: 80rpx;
  background-color: #f5f5f5;
  border-radius: 40rpx;
  padding: 0 80rpx 0 30rpx;
  font-size: 28rpx;
}

.search-icon {
  position: absolute;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%);
  color: #999;
}

.filter-tags {
  display: flex;
  flex-wrap: wrap;
}

.filter-tag {
  padding: 10rpx 20rpx;
  background-color: #f5f5f5;
  border-radius: 30rpx;
  margin-right: 15rpx;
  margin-bottom: 15rpx;
  font-size: 24rpx;
  color: #666;
}

.filter-tag.active {
  background-color: #4CAF50;
  color: #fff;
}

/* 菜品列表 */
.dish-list {
  margin-bottom: 120rpx;
}

.dish-item {
  display: flex;
  background-color: #fff;
  margin-bottom: 15rpx;
  padding: 20rpx;
  border-radius: 10rpx;
  position: relative;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s;
}

.dish-item.selected {
  background-color: #e8f5e9;
  border: 1rpx solid #4CAF50;
}

.dish-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
  background-color: #f0f0f0;
}

.dish-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.dish-name {
  font-size: 32rpx;
  font-weight: 500;
  margin-bottom: 10rpx;
}

.dish-tags {
  display: flex;
  flex-wrap: wrap;
}

.dish-tag {
  font-size: 24rpx;
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
}

.dish-tag.type {
  background-color: #e8f5e9;
  color: #4CAF50;
}

.dish-tag.spicy {
  background-color: #ffebee;
  color: #f44336;
}

.check-icon {
  position: absolute;
  right: 20rpx;
  top: 20rpx;
  width: 40rpx;
  height: 40rpx;
  background-color: #4CAF50;
  color: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
}

/* 空状态 */
.empty-tip {
  padding: 60rpx 0;
  text-align: center;
}

.empty-text {
  color: #999;
  font-size: 28rpx;
}

/* 底部操作按钮 */
.action-buttons {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  padding: 20rpx;
  background-color: #fff;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.cancel-btn, .submit-btn {
  flex: 1;
  height: 80rpx;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 40rpx;
}

.cancel-btn {
  margin-right: 10rpx;
  background-color: #f5f5f5;
  color: #666;
}

.submit-btn {
  margin-left: 10rpx;
  background-color: #4CAF50;
  color: #fff;
} 