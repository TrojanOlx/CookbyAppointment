.container {
  padding: 20rpx;
  box-sizing: border-box;
  background-color: #f6f6f6;
  min-height: 100vh;
}

/* 图片上传区域 */
.image-upload {
  display: flex;
  justify-content: center;
  margin-bottom: 30rpx;
}

.image-preview {
  width: 200rpx;
  height: 200rpx;
  border-radius: 8rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  background-color: #f5f5f5;
}

.preview-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.upload-placeholder {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #999;
}

.iconfont.icon-add {
  font-size: 48rpx;
  margin-bottom: 10rpx;
}

.placeholder-text {
  font-size: 24rpx;
}

/* 表单区域 */
.form-section {
  background-color: #fff;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 20rpx;
  padding-left: 20rpx;
  border-left: 6rpx solid #4CAF50;
}

.form-item {
  margin-bottom: 30rpx;
}

.form-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 15rpx;
  display: block;
}

.form-label.required::before {
  content: '*';
  color: #f44336;
  margin-right: 8rpx;
}

.form-input {
  height: 80rpx;
  background-color: #f5f5f5;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  color: #333;
}

.picker {
  height: 80rpx;
  background-color: #f5f5f5;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  color: #333;
  display: flex;
  align-items: center;
}

.picker.placeholder {
  color: #999;
}

/* 按钮区域 */
.form-actions {
  display: flex;
  justify-content: space-between;
  padding: 30rpx 0;
}

.cancel-btn, .submit-btn {
  flex: 1;
  height: 88rpx;
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  margin: 0 15rpx;
}

.cancel-btn {
  background-color: #f5f5f5;
  color: #666;
}

.submit-btn {
  background-color: #4CAF50;
  color: #fff;
}

/* 按钮点击效果 */
.cancel-btn:active {
  background-color: #e0e0e0;
}

.submit-btn:active {
  opacity: 0.9;
} 