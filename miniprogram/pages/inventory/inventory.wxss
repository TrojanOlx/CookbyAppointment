.container {
  position: relative;
  height: 100vh;
  padding: 0;
  background-color: #f6f6f6;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
}

/* 搜索区域 */
.search-bar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 100;
  background-color: #fff;
  padding: 20rpx;
  border-radius: 0 0 10rpx 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.search-box {
  position: relative;
}

.search-input {
  height: 80rpx;
  background-color: #f5f5f5;
  border-radius: 40rpx;
  padding: 0 80rpx 0 30rpx;
  font-size: 28rpx;
}

.search-icon {
  position: absolute;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%);
  color: #999;
}

/* 库存列表 */
.inventory-list {
  flex: 1;
  padding: 20rpx;
  padding-top: 130rpx; /* 为固定定位的搜索栏留出空间 */
  padding-bottom: calc(100rpx + env(safe-area-inset-bottom)); /* 为底部导航栏和安全区域留出空间 */
  width: 100%;
  box-sizing: border-box;
  overflow-y: auto;
  -webkit-overflow-scrolling: touch; /* 增加 iOS 滚动流畅度 */
}

.inventory-item {
  display: flex;
  justify-content: space-between;
  background-color: #fff;
  margin-bottom: 15rpx;
  padding: 20rpx;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.item-info {
  flex: 1;
  overflow: hidden;
}

.item-name {
  font-size: 32rpx;
  font-weight: 500;
  margin-bottom: 10rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.item-amount {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.item-dates {
  display: flex;
  flex-direction: column;
  font-size: 24rpx;
  color: #999;
}

.expiry {
  margin-top: 5rpx;
}

.expired {
  color: #f44336;
  font-weight: 500;
}

.expiring-soon {
  color: #ff9800;
  font-weight: 500;
}

.item-actions {
  display: flex;
  align-items: flex-start;
  margin-left: 10rpx;
}

.delete-btn {
  width: 50rpx;
  height: 50rpx;
  background-color: #ffebee;
  color: #f44336;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
  transition: all 0.3s;
}

.delete-btn:active {
  background-color: #f44336;
  color: #fff;
}

/* 空提示 */
.empty-tip {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-top: 100rpx;
}

.empty-text {
  font-size: 30rpx;
  color: #999;
  margin-top: 20rpx;
}

/* 添加按钮 */
.add-btn {
  position: fixed;
  right: 30rpx;
  bottom: calc(120rpx + env(safe-area-inset-bottom));
  width: 100rpx;
  height: 100rpx;
  background-color: #4CAF50;
  color: #fff;
  font-size: 60rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.15);
  z-index: 100;
  transition: all 0.2s;
}

.add-btn:active {
  transform: scale(0.95);
} 