.container {
  padding: 20rpx;
  padding-bottom: calc(120rpx + env(safe-area-inset-bottom));
  background-color: #f6f6f6;
  min-height: 100vh;
  box-sizing: border-box;
}

/* 搜索区域 */
.search-bar {
  background-color: #fff;
  padding: 20rpx;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.search-box {
  position: relative;
}

.search-input {
  height: 80rpx;
  background-color: #f5f5f5;
  border-radius: 40rpx;
  padding: 0 80rpx 0 30rpx;
  font-size: 28rpx;
}

.search-icon {
  position: absolute;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%);
  color: #999;
}

/* 库存列表 */
.inventory-list {
  margin-bottom: 100rpx;
}

.inventory-item {
  display: flex;
  justify-content: space-between;
  background-color: #fff;
  margin-bottom: 15rpx;
  padding: 20rpx;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.item-info {
  flex: 1;
}

.item-name {
  font-size: 32rpx;
  font-weight: 500;
  margin-bottom: 10rpx;
}

.item-amount {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.item-dates {
  display: flex;
  flex-direction: column;
  font-size: 24rpx;
  color: #999;
}

.expiry {
  margin-top: 5rpx;
}

.expired {
  color: #f44336;
  font-weight: 500;
}

.expiring-soon {
  color: #ff9800;
  font-weight: 500;
}

.item-actions {
  display: flex;
  align-items: flex-start;
}

.delete-btn {
  width: 50rpx;
  height: 50rpx;
  background-color: #ffebee;
  color: #f44336;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
}

/* 空提示 */
.empty-tip {
  padding: 60rpx 0;
  text-align: center;
}

.empty-text {
  color: #999;
  font-size: 28rpx;
}

/* 添加按钮 */
.add-btn {
  position: fixed;
  right: 30rpx;
  bottom: calc(120rpx + env(safe-area-inset-bottom));
  width: 100rpx;
  height: 100rpx;
  background-color: #4CAF50;
  color: #fff;
  font-size: 60rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.15);
  z-index: 100;
} 