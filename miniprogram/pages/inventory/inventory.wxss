.container {
  position: relative;
  height: 100vh;
  padding: 0;
  background-color: #f6f6f6;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
}

/* 搜索区域 */
.search-bar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 100;
  background-color: #fff;
  padding: 20rpx;
  border-radius: 0 0 10rpx 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.search-box {
  position: relative;
}

.search-input {
  height: 80rpx;
  background-color: #f5f5f5;
  border-radius: 40rpx;
  padding: 0 80rpx 0 30rpx;
  font-size: 28rpx;
}

.search-icon {
  position: absolute;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%);
  color: #999;
}

/* 筛选组件 */
.filter-bar {
  position: fixed;
  top: 120rpx;
  left: 0;
  right: 0;
  z-index: 100;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  background-color: #ffffff;
  padding: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  overflow-x: auto;
}

.filter-item {
  flex: 1;
  min-width: 160rpx;
  height: 70rpx;
  font-size: 28rpx;
  border-radius: 8rpx;
  color: #666;
  margin: 0 5rpx;
  transition: all 0.3s;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
  border-bottom: 3rpx solid transparent;
}

.filter-item.active {
  color: #4CAF50;
  font-weight: 500;
  border-bottom: 3rpx solid #4CAF50;
}

.filter-item .count {
  font-size: 20rpx;
  color: #999;
  margin-top: 4rpx;
}

.filter-item.active .count {
  color: #4CAF50;
}

/* 库存滚动容器 */
.inventory-scroll-container {
  flex: 1;
  position: relative;
  width: 100%;
  box-sizing: border-box;
  overflow: hidden; /* 防止内容溢出 */
  padding-right: 10rpx; /* 增加右侧内边距，使滚动条更靠右 */
}

/* 库存列表 */
.inventory-list {
  flex: 1;
  padding: 20rpx;
  padding-right: 40rpx; /* 增加右侧内边距，为滚动条留出更多空间 */
  padding-top: 220rpx; /* 为固定定位的搜索栏和筛选栏留出空间 */
  padding-bottom: 120rpx; /* 为底部导航栏留出空间 */
  width: 100%;
  box-sizing: border-box;
  -webkit-overflow-scrolling: touch; /* 增加 iOS 滚动流畅度 */
  height: 100%;
  /* 自定义滚动条样式 */
  scrollbar-width: thin;
  scrollbar-color: rgba(76, 175, 80, 0.3) transparent;
  /* iOS系统下滚动条样式优化 */
  overflow-scrolling: touch;
}

/* 滑动删除相关样式 */
.inventory-item-container {
  margin: 20rpx;
  width: 100%;
  height: 200rpx;
  background: #FFFFFF;
  border-radius: 20rpx;
  display: flex;
  position: relative;
}

.movable-area {
  height: 200rpx;
  width: calc(100% - 150rpx);
  background: #FFFFFF;
  border-radius: 20rpx;
  z-index: 3;
}

.movable-view {
  width: 710rpx;
  height: 200rpx;
  background: #FFFFFF;
  border-radius: 20rpx;
}

.movable-delete-btn {
  position: absolute;
  right: 0;
  top: 0;
  width: 150rpx;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
  font-weight: 600;
  color: #FFFFFF;
  background: #ff4d4f;
  border-top-right-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
}

/* 修改原有样式以适应滑动删除 */
.inventory-item {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  padding: 20rpx;
  box-sizing: border-box;
  background: #FFFFFF;
  border-radius: 20rpx;
}

/* 左侧图片 */
.item-image {
  width: 100rpx;
  height: 100rpx;
  min-width: 100rpx;
  margin-right: 20rpx;
  border-radius: 8rpx;
  overflow: hidden;
  background-color: #f5f5f5;
}

.item-image image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

/* 中间信息区域 */
.item-info {
  flex: 1;
  min-width: 0;
  margin-right: 20rpx;
}

.item-name {
  font-size: 32rpx;
  font-weight: 500;
  margin-bottom: 10rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.item-amount {
  font-size: 28rpx;
  color: #666;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* 右侧日期区域 */
.item-dates-container {
  min-width: 200rpx;
  font-size: 24rpx;
  color: #999;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  margin-right: 16rpx;
}

.date-row {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-bottom: 6rpx;
  width: 100%;
  flex-wrap: nowrap;
}

.date-label {
  white-space: nowrap;
  margin-right: 8rpx;
  color: #999;
  font-size: 22rpx;
}

.date-value {
  color: #666;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.days-left {
  color: #4CAF50;
  font-weight: 500;
  margin-top: 4rpx;
}

.expired {
  color: #f44336 !important;
  font-weight: 500;
}

.expiring-soon {
  color: #ff9800 !important;
  font-weight: 500;
}

/* 空提示 */
.empty-tip {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-top: 100rpx;
}

.empty-text {
  font-size: 30rpx;
  color: #999;
  margin-top: 20rpx;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 0;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #4CAF50;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

.loading-spinner.small {
  width: 30rpx;
  height: 30rpx;
  border-width: 4rpx;
}

.loading-text {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #999;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 加载更多和无更多数据提示 */
.load-more-tip, .no-more-tip {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 30rpx 0;
}

.load-more-tip {
  color: #999;
}

.no-more-tip {
  color: #bbb;
  font-size: 24rpx;
  padding: 20rpx 0 40rpx;
}

/* 添加按钮 */
.add-btn {
  position: fixed;
  right: 30rpx;
  bottom: 120rpx;
  width: 100rpx;
  height: 100rpx;
  background-color: #4CAF50;
  color: #fff;
  font-size: 60rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.15);
  z-index: 100;
}

/* 移除原有的删除按钮样式 */
.delete-btn-container {
  display: none;
} 