.container {
  min-height: 100vh;
  background-color: #f8f9fa;
  padding: 0 30rpx 50rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
}

/* 页面头部 */
.page-header {
  padding: 30rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.appointment-info {
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
}

/* 菜品列表 */
.dishes-list {
  margin-top: 30rpx;
  margin-bottom: 30rpx;
}

.dish-card {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
}

.dish-card.active {
  border: 2rpx solid #ffc107;
  transform: translateY(-2rpx);
  box-shadow: 0 6rpx 16rpx rgba(255, 193, 7, 0.15);
}

.dish-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.dish-info {
  display: flex;
  align-items: center;
  flex: 1;
}

.dish-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 12rpx;
  margin-right: 20rpx;
  background-color: #f5f5f5;
}

.dish-details {
  flex: 1;
}

.dish-name {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 10rpx;
  display: block;
}

.dish-tags {
  display: flex;
  flex-wrap: wrap;
}

.dish-tag {
  font-size: 24rpx;
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
}

.dish-tag.type {
  background-color: #e8f5e9;
  color: #4CAF50;
}

.dish-tag.spicy {
  background-color: #ffebee;
  color: #f44336;
}

.review-status {
  font-size: 24rpx;
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
}

.review-status .reviewed {
  color: #4CAF50;
  background-color: rgba(76, 175, 80, 0.1);
  border: 1rpx solid rgba(76, 175, 80, 0.3);
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
}

.review-status .not-reviewed {
  color: #ffc107;
  background-color: rgba(255, 193, 7, 0.1);
  border: 1rpx solid rgba(255, 193, 7, 0.3);
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
}

/* 评价表单 */
.review-form {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 30rpx;
}

.form-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 30rpx;
  text-align: center;
}

.rating-section, .comment-section, .image-section {
  margin-bottom: 30rpx;
}

.rating-title, .comment-title, .image-title {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
  display: block;
}

.comment-input {
  width: 100%;
  height: 200rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  padding: 20rpx;
  font-size: 28rpx;
  color: #333;
  box-sizing: border-box;
  background-color: #fafafa;
}

.comment-counter {
  text-align: right;
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}

.image-list {
  display: flex;
  flex-wrap: wrap;
}

.image-item {
  width: 180rpx;
  height: 180rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  position: relative;
  border-radius: 8rpx;
  overflow: hidden;
}

.uploaded-image {
  width: 100%;
  height: 100%;
}

.delete-btn {
  position: absolute;
  top: 0;
  right: 0;
  width: 40rpx;
  height: 40rpx;
  background-color: rgba(0, 0, 0, 0.5);
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  border-radius: 0 0 0 8rpx;
}

.upload-btn {
  width: 180rpx;
  height: 180rpx;
  border: 1rpx dashed #e0e0e0;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #fafafa;
}

.upload-icon {
  font-size: 60rpx;
  color: #999;
}

.submit-btn {
  background-color: #ffc107;
  color: #fff;
  font-size: 32rpx;
  font-weight: 500;
  padding: 20rpx 0;
  border-radius: 8rpx;
  width: 100%;
  text-align: center;
}

.submit-btn[disabled] {
  background-color: #f5f5f5;
  color: #999;
}

/* 评价结果 */
.review-result {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.result-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 30rpx;
  text-align: center;
}

.result-rating {
  margin-bottom: 30rpx;
  display: flex;
  justify-content: center;
}

.result-content {
  background-color: #f8f9fa;
  border-radius: 8rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

.result-images {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 20rpx;
}

.result-images image {
  width: 180rpx;
  height: 180rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  border-radius: 8rpx;
}

.result-time {
  font-size: 24rpx;
  color: #999;
  text-align: right;
}

/* 空状态 */
.empty-state, .empty-form {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 60rpx 0;
  color: #999;
  font-size: 28rpx;
} 