/* pages/profile/settings/settings.wxss */
/* 设置页面样式 */
.settings-container {
  padding: 20rpx;
  background-color: #f6f6f6;
  min-height: 100vh;
}

.settings-title {
  font-size: 36rpx;
  font-weight: bold;
  margin: 20rpx 0 30rpx;
  padding-left: 20rpx;
  color: #333;
}

.settings-section {
  background-color: #fff;
  border-radius: 12rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.1);
  overflow: hidden;
}

.settings-header {
  padding: 20rpx 30rpx;
  font-size: 28rpx;
  color: #888;
  border-bottom: 1rpx solid #f0f0f0;
}

.settings-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.settings-item:last-child {
  border-bottom: none;
}

.settings-label {
  flex: 1;
  font-size: 30rpx;
  color: #333;
}

.settings-value {
  font-size: 28rpx;
  color: #888;
  margin-right: 10rpx;
}

.settings-arrow {
  color: #cccccc;
  font-size: 30rpx;
}

.settings-action {
  flex: 1;
  display: flex;
  justify-content: flex-end;
}

.phone-btn {
  margin: 0;
  padding: 10rpx 20rpx;
  font-size: 28rpx;
  line-height: 1.5;
  background-color: #07c160;
  color: #fff;
  border-radius: 30rpx;
}