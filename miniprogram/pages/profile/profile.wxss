/* 页面容器 */
.profile-container {
  padding: 20rpx;
  padding-bottom: calc(120rpx + env(safe-area-inset-bottom)); /* 为TabBar留出足够空间 */
  background-color: #f6f6f6;
  min-height: 100vh;
  box-sizing: border-box;
}

/* 用户信息区域 */
.user-info {
  background-color: #ffffff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
}

.login-btn {
  width: 80%;
  height: 44px;
  line-height: 44px;
  background-color: #07c160;
  color: white;
  border-radius: 5px;
  margin: 10px auto;
  font-size: 16px;
}

.userinfo-btn {
  width: 80%;
  height: 44px;
  line-height: 44px;
  background-color: #1989fa;
  color: white;
  border-radius: 5px;
  margin: 10px auto;
  font-size: 16px;
}

.user-avatar-info {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  margin-right: 30rpx;
  border: 4rpx solid #4CAF50;
}

.user-info-text {
  flex: 1;
}

.user-name {
  font-size: 34rpx;
  color: #333333;
  font-weight: bold;
}

.user-openid {
  font-size: 24rpx;
  color: #999999;
  max-width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-bottom: 10rpx;
}

/* 菜单列表 */
.menu-list {
  background-color: #ffffff;
  border-radius: 12rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
}

.menu-section {
  margin-bottom: 20rpx;
}

.menu-title {
  font-size: 28rpx;
  color: #888888;
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.menu-icon {
  margin-right: 20rpx;
  font-size: 40rpx;
}

.menu-text {
  flex: 1;
  font-size: 30rpx;
  color: #333333;
}

.menu-arrow {
  color: #cccccc;
  font-size: 30rpx;
}

/* 设置区域 */
.settings {
  background-color: #ffffff;
  border-radius: 12rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 30rpx; /* 增加底部间距 */
}

/* 管理员菜单样式 */
.menu-section:last-child .menu-item:last-child {
  border-bottom: none;
}

/* 退出登录按钮样式 */
.settings .menu-item:last-child .menu-text {
  color: #FF5252;
} 