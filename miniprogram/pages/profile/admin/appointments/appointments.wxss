.appointments-container {
  padding: 20rpx;
  background-color: #f6f6f6;
  min-height: 100vh;
}

.page-header {
  margin-bottom: 30rpx;
  padding: 20rpx 0;
}

.page-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
}

.appointment-list {
  margin-bottom: 30rpx;
}

.appointment-item {
  background-color: #ffffff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.appointment-date {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 10rpx;
}

.appointment-meal {
  font-size: 28rpx;
  color: #4CAF50;
  margin-bottom: 10rpx;
}

.appointment-dishes {
  margin-bottom: 20rpx;
}

.dish-count {
  font-size: 26rpx;
  color: #666666;
  margin-bottom: 10rpx;
}

.dish-names {
  display: flex;
  flex-wrap: wrap;
}

.dish-name {
  font-size: 24rpx;
  color: #999999;
  background-color: #f0f0f0;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
}

.appointment-actions {
  display: flex;
  justify-content: flex-end;
}

.btn {
  margin-left: 20rpx;
  font-size: 26rpx;
  padding: 10rpx 30rpx;
  border-radius: 30rpx;
}

.btn-primary {
  background-color: #4CAF50;
  color: #ffffff;
}

.btn-secondary {
  background-color: #f5f5f5;
  color: #666666;
  border: 1rpx solid #dddddd;
}

.empty-message {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
  color: #999999;
  font-size: 30rpx;
  text-align: center;
}

.btn-create {
  margin-top: 30rpx;
  background-color: #4CAF50;
  color: #ffffff;
  font-size: 30rpx;
  padding: 16rpx 40rpx;
  border-radius: 40rpx;
}

/* 容器样式 */
.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f8f8f8;
}

/* 日历部分样式 */
.calendar-section {
  background-color: #fff;
  padding: 20rpx 0;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 20rpx;
}

/* 预约列表部分样式 */
.appointments-section {
  flex: 1;
  display: flex;
  flex-direction: column;
  padding: 0 20rpx;
  width: 100%;
  box-sizing: border-box;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  margin-bottom: 20rpx;
  width: 100%;
}

.section-title {
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
}

.appointments-list {
  flex: 1;
  overflow-y: auto;
  width: 100%;
}

/* 加载状态样式 */
.loading-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx 0;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #3498db;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}

/* 用户卡片样式 */
.user-card {
  background-color: #fff;
  border-radius: 16rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  overflow: hidden;
  width: 100%;
  box-sizing: border-box;
  padding: 0;
  border: 1rpx solid #eaeaea;
}

.user-header {
  padding: 24rpx 30rpx;
  background: linear-gradient(to right, #f0f7ff, #e6f3ff);
  border-bottom: 1rpx solid #d9e9f9;
  width: 100%;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: space-between;
  cursor: pointer;
  position: relative;
  transition: background 0.15s ease-out;
  touch-action: manipulation;
  -webkit-tap-highlight-color: transparent;
}

.user-header:active {
  background: linear-gradient(to right, #e6f0fa, #d8e8f7);
}

.expand-icon {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 40rpx;
  height: 40rpx;
  transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.expand-icon.expanded {
  transform: rotate(0deg);
}

.expand-icon .iconfont {
  font-size: 24rpx;
  color: #666;
}

.user-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #2c3e50;
  position: relative;
  padding-left: 18rpx;
}

.user-name::before {
  content: '';
  position: absolute;
  left: 0;
  top: 6rpx;
  height: 28rpx;
  width: 6rpx;
  background-color: #2196f3;
  border-radius: 3rpx;
}

/* 餐次列表样式 */
.meals-list {
  width: 100%;
  box-sizing: border-box;
  background-color: #fff;
  overflow: hidden;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  will-change: transform, opacity, max-height;
}

.meals-list.expanded {
  padding: 16rpx 30rpx;
  opacity: 1;
  transform: translateY(0);
  visibility: visible;
  max-height: 3000rpx;
}

.meals-list.collapsed {
  padding: 0 30rpx;
  max-height: 0;
  opacity: 0;
  transform: translateY(-8rpx);
  visibility: hidden;
}

.meal-item {
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
  margin-bottom: 16rpx;
  position: relative;
  opacity: 0;
  transform: translateY(10rpx);
  animation: fadeInUp 0.3s forwards;
}

@keyframes fadeInUp {
  0% {
    opacity: 0;
    transform: translateY(10rpx);
  }
  100% {
    opacity: 1;
    transform: translateY(0);
  }
}

.meals-list.expanded .meal-item:nth-child(1) {
  animation-delay: 0.1s;
}

.meals-list.expanded .meal-item:nth-child(2) {
  animation-delay: 0.15s;
}

.meals-list.expanded .meal-item:nth-child(3) {
  animation-delay: 0.2s;
}

.meal-item:not(:last-child) {
  border-bottom: 6rpx solid #eef5ff;
  padding-bottom: 24rpx;
  margin-bottom: 24rpx;
}

.meal-item:not(:last-child)::after {
  content: '';
  position: absolute;
  bottom: -3rpx;
  left: 0;
  width: 100%;
  height: 1rpx;
  background-color: #d5e3f7;
}

.meal-item:last-child {
  border-bottom: none;
  margin-bottom: 0;
}

.meal-type-wrapper {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 16rpx;
  padding: 10rpx 16rpx;
  border-radius: 8rpx;
  background-color: #f9f9f9;
}

.meal-type {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  padding: 6rpx 16rpx;
  border-radius: 6rpx;
  position: relative;
}

/* 不同餐次的标识色 */
.meal-item:nth-child(3n+1) .meal-type-wrapper {
  background-color: rgba(33, 150, 243, 0.08);
  border-left: 4rpx solid #2196f3;
}

.meal-item:nth-child(3n+2) .meal-type-wrapper {
  background-color: rgba(255, 152, 0, 0.08);
  border-left: 4rpx solid #ff9800;
}

.meal-item:nth-child(3n+3) .meal-type-wrapper {
  background-color: rgba(156, 39, 176, 0.08);
  border-left: 4rpx solid #9c27b0;
}

.dish-list {
  display: flex;
  flex-wrap: wrap;
  width: 100%;
  margin: 16rpx 0;
  padding: 0 10rpx;
}

.dish-name {
  font-size: 26rpx;
  color: #555;
  background-color: #f7f7f7;
  padding: 8rpx 20rpx;
  border-radius: 30rpx;
  margin-right: 16rpx;
  margin-bottom: 12rpx;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.05);
  border: 1rpx solid #eee;
}

/* 添加预约状态样式 */
.meal-status {
  font-size: 24rpx;
  padding: 4rpx 12rpx;
  border-radius: 6rpx;
  margin-left: 16rpx;
}

.status-pending {
  color: #ff9800;
  background-color: rgba(255, 152, 0, 0.1);
  border: 1px solid rgba(255, 152, 0, 0.3);
}

.status-confirmed {
  color: #2196f3;
  background-color: rgba(33, 150, 243, 0.1);
  border: 1px solid rgba(33, 150, 243, 0.3);
}

.status-completed {
  color: #4caf50;
  background-color: rgba(76, 175, 80, 0.1);
  border: 1px solid rgba(76, 175, 80, 0.3);
}

.status-cancelled {
  color: #f44336;
  background-color: rgba(244, 67, 54, 0.1);
  border: 1px solid rgba(244, 67, 54, 0.3);
}

/* 空状态样式 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 0;
}

.empty-text {
  font-size: 30rpx;
  color: #999;
  text-align: center;
}

/* 操作按钮样式 */
.action-buttons {
  display: flex;
  justify-content: flex-end;
  margin-top: 20rpx;
  padding-top: 16rpx;
  border-top: 1rpx dashed #e0e0e0;
}

.action-btn {
  font-size: 26rpx;
  padding: 10rpx 24rpx;
  border-radius: 30rpx;
  margin-left: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.action-btn:active {
  transform: scale(0.95);
  box-shadow: 0 1rpx 3rpx rgba(0, 0, 0, 0.1);
}

.confirm-btn {
  background-color: rgba(33, 150, 243, 0.1);
  color: #2196f3;
  border: 1rpx solid rgba(33, 150, 243, 0.3);
}

.cancel-btn {
  background-color: rgba(244, 67, 54, 0.1);
  color: #f44336;
  border: 1rpx solid rgba(244, 67, 54, 0.3);
}

.complete-btn {
  background-color: rgba(76, 175, 80, 0.1);
  color: #4caf50;
  border: 1rpx solid rgba(76, 175, 80, 0.3);
}

.review-btn {
  background-color: rgba(156, 39, 176, 0.1);
  color: #9c27b0;
  border: 1rpx solid rgba(156, 39, 176, 0.3);
}

.meal-icon {
  margin-right: 8rpx;
  font-size: 30rpx;
  display: inline-block;
  vertical-align: middle;
} 