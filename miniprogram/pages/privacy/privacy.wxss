.container {
  padding: 30rpx;
  display: flex;
  flex-direction: column;
  height: 100vh;
  box-sizing: border-box;
}

.privacy-title {
  font-size: 40rpx;
  font-weight: bold;
  text-align: center;
  padding: 20rpx 0;
  color: #333;
}

.privacy-content {
  flex: 1;
  margin: 20rpx 0;
  background: #f9f9f9;
  padding: 30rpx;
  border-radius: 10rpx;
  font-size: 30rpx;
  line-height: 1.6;
  color: #333;
}

.btn-area {
  display: flex;
  justify-content: space-between;
  padding: 30rpx 0;
}

.btn-reject {
  flex: 1;
  margin-right: 20rpx;
  background-color: #f5f5f5;
  color: #666;
}

.btn-accept {
  flex: 1;
  margin-left: 20rpx;
  background-color: #4CAF50;
  color: white;
}

button {
  border-radius: 10rpx;
} 