<view class="container">
  <view class="privacy-title">隐私政策</view>
  
  <scroll-view scroll-y="true" class="privacy-content">
    <rich-text nodes="{{privacyContent}}"></rich-text>
  </scroll-view>
  
  <view class="btn-area">
    <button class="btn-reject" bindtap="rejectPrivacy">不同意</button>
    <button class="btn-accept" bindtap="acceptPrivacy">同意并继续</button>
  </view>
</view> 